<%= form_for(@user) do |f| %>

    <div><%= f.label :first_name %><br>
      <%= f.text_field :first_name ,required: true%></div>
    <div><%= f.label :last_name %><br>
      <%= f.text_field :last_name,required: true %></div>
    <div><%= f.label :street %><br>
      <%= f.text_field :street ,required: true%></div>
    <div><%= f.label :country %><br>
      <%= f.text_field :country %></div>
    <div><%= f.label :zip %><br>
      <%= f.text_field :zip %></div>
    <div><%= f.label :phone%><br>
      <%= f.text_field :phone %></div>

    <div><%= f.submit "Edit Information" %></div>
<% end %>