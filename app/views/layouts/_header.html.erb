<div align="center">

  <%= form_tag(controller: "/items", action: "search", method: "post") do %>

      <%= select_tag(:category_query, options_for_select(
              [['All', 'All'],
               ['TV & Home Theater', 'TV & Home Theater'],
               ['Computer & Tables', 'Computer & Tables'],
               ['Cell Phones', 'Cell Phones'],
               ['Cameras', 'Cameras'],
               ['Audio', 'Audio'],
               ['Electronics', 'Electronics'],
               ['Video Games', 'Video Games'],
               ['Health', 'Health']]),
                     :onChange => "displaydesc(document.form1.select1, thetext1, 'textcontainer1')",
                     :size => 1) %>
      <%= text_field_tag(:keyword) %>
      <%= submit_tag("Search") %>

  <% end %>

</div>
