<%= form_for(@item, :html => { :multipart => true }) do |f| %>
    <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
            <% @item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>


    <div class="field">
      <%= f.label :category %><br />
      <%= f.select(:category, options_for_select(
              [['TV & Home Theater', 'TV & Home Theater'],
               ['Computer & Tables', 'Computer & Tables'],
               ['Cell Phones', 'Cell Phones'],
               ['Cameras', 'Cameras'],
               ['Audio', 'Audio'],
               ['Electronics', 'Electronics'],
               ['Video Games', 'Video Games'],
               ['Health', 'Health']]),
                     :onChange => "displaydesc(document.form1.select1, thetext1, 'textcontainer1')",
                     :size => 1) %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label :condition %><br />
      <%= f.text_field :condition %>
    </div>
    <!--<div class="field">
      <%#= f.label :duration %><br />
      <%#= f.text_field :duration %>
    <%= f.hidden_field :duration, :value => 0 %>
    </div>-->



    <div class="field">
      <%= f.label :quantity %><br />
      <%= f.number_field :total_quantity, :value => 1, :min => 1, :max => 65535 %>
    </div>

    <div class="field">
      <%= f.label :price %><br />$
      <%= f.number_field :price, :value => 1, :min => 1 %>
    </div>
    <div class="field">
      <%= f.file_field :product %>
    </div>

    <%= f.hidden_field :active, :value => 1 %>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
