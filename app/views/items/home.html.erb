<!--<div align="left" id="customers"  >-->
  <table id="customers">

    <tr>

      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Condition</th>
      <!--<th>Duration</th>-->
      <th>Price</th>
      <th>Quantity</th>
      <th>Seller</th>
     <th>Advertised</th>
      <th>View Item</th>
     <th> Action on Item</th>
      
    </tr>
    <% @advertised_items = @items.select { |item| item.isAdvertisement == true }%>
    <% @items= @items.select { |item| item.isAdvertisement == false }  %>
    <% @items.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td><%= item.category %></td>
          <td><%= item.description %></td>
          <td><%= item.condition %></td>
          <!--<td><%#= item.duration %></td>-->
          <td>$<%= item.price %></td>
          <td><%= item.quantity %></td>
          <td><%= item.user.email %>
         <td><%= item.isAdvertisement %></td>
          <td><%= link_to 'View the Item', item %></td>
          <% if current_user.nil? || current_user.id != item.user_id %>
              <td><%= link_to 'Add To Cart', :controller => "/shopping_carts", :action => :add_to_cart, :item_id => item.id, :quantity => 1 %></td>
		<% else %> <td>Your Item</td>
          <% end %>
        </tr>
    <% end %>









   </table>
        </td>
