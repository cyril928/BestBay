   <table id="advertisement">
     <tr>
       <td>
         <!--<#% @advertised_items = @items.select { |item| item.isAdvertisement == true }%>-->
         <% item_length = @advertised_items.length  %>
         <!--<%# item_length = item_length - 1 %>-->
         <% rand_num = rand(item_length) %>
         <% i=0 %>
         <% @advertised_items.each do |item| %>
             <% if i == rand_num    %>

               <tr>
             <tr> <td><%= item.title %></td>  </tr>

             <tr> <td><%= item.description %></td>  </tr>
             <tr><td><%= item.condition %></td>    </tr>
               <!--<td><%#= item.duration %></td>-->
             <tr><td>$<%= item.price %></td>      </tr>

             <tr> <td><%= item.user.email %> </td>   </tr>
             <tr> <td>  <%= link_to image_tag(item.product.url), item.description%> </td>   </tr>

             <tr> <td><%= link_to 'Click here to View the Item', item, :target => "_blank" %></td>   </tr>
               <% i = i+1 %>
                <% break %>

         <% else %>
             <% i = i+1 %>
             <%  %>
         <% end %>
     <% end %>
   </table>
      </td>
      </tr>
    </table>
