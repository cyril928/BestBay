<h1>Welcome to BestBay</h1>
<div align="center">

  <table>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Description</th>
    <th>Condition</th>
    <th>Duration</th>
    <th>Price</th>
    <th>Seller</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><%= item.category %></td>
    <td><%= item.description %></td>
    <td><%= item.condition %></td>
    <td><%= item.duration %></td>
    <td><%= item.price %></td>
    <td><%= item.user.email %>
    <td><%= link_to 'View the Item', item %></td>

  </tr>
<% end %>
</table>
</div>


