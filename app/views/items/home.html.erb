<head>

  <style>

      div.bgcarousel{ /* CSS for main carousel container */
          background: black url(ajaxload.gif) center center no-repeat; /* loading gif while caoursel is loading */
          width:800px; /* default dimensions of carousel */
          height:200px;
          TEXT-ALIGN: center;
          MARGIN-RIGHT: auto;
          MARGIN-LEFT: auto;
      }

      img.navbutton{ /* CSS for the nav buttons */
          margin:5px;
          opacity:0.7;
      }

      div.slide{ /* CSS for each image's DIV container within main container */
          background-color: black;
          background-position: center center; /* center image within carousel */
          background-repeat: no-repeat;
          background-size: cover; /* CSS3 property to scale image within container? "cover" or "contain" */
          color: black;
      }

      div.selectedslide{ /* CSS for currently selected slide */
      }

      div.slide div.desc{ /* DIV that contains the textual description inside .slide */
          position: absolute;
          color: white;
          left: 40px;
          top: 100px;
          width:200px;
          padding: 10px;
          font: bold 16px sans-serif, Arial;
          text-shadow: 0 -1px 1px #8a8a8a; /* CSS3 text shadow */
          z-index:5;
      }

      div.selectedslide div.desc{ /* CSS for currently selected slide's desc div */
      }

      div.slide div.desc h2{
          font-size:150%;
          margin:0;
      }

      div.slide div.desc a{
          color:yellow;
          text-decoration:none;
      }

  </style>

  <script src="bgcarousel.js" type="text/javascript">
  </script>

  <script type="text/javascript">

      var firstbgcarousel=new bgCarousel({
          wrapperid: 'mybgcarousel', //ID of blank DIV on page to house carousel
          imagearray: [
              ['../images/1.jpg', '<h2>BLACK FRIDAY</h2>GREAT DISCOUNT.'], //["image_path", "optional description"]
              ['/app/assets/images/image/2.jpg', '<h2>THANKS GIVING</h2>DEAL FRENZY.'],
              ['../images/3.jpg', 'HOTTEST GIFTS FOR THE HOLIDAYS'],
              ['image/4.jpg', 'UP TO 70% OFF'] //<--no trailing comma after very last image element!
          ],
          displaymode: {type:'auto', pause:3000, cycles:2, stoponclick:false, pauseonmouseover:true},
          navbuttons: ['/app/assets/images/left.gif', 'image/right.gif', 'image/up.gif', 'image/down.gif'], // path to nav images
          activeslideclass: 'selectedslide', // CSS class that gets added to currently shown DIV slide
          orientation: 'h', //Valid values: "h" or "v"
          persist: true, //remember last viewed slide and recall within same session?
          slideduration: 500 //transition duration (milliseconds)
      })

  </script>

</head>

<h1>Welcome to BestBay</h1>
<div id="mybgcarousel" class="bgcarousel" ></div>





<style>
    #customers
    {
        font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
        width:100%;
        border-collapse:collapse;
    }
    #customers td, #customers th
    {
        font-size:1em;
        border:1px solid #98bf21;
        padding:3px 7px 2px 7px;
    }
    #customers th
    {
        font-size:1.1em;
        text-align:left;
        padding-top:5px;
        padding-bottom:4px;
        background-color:#A7C942;
        color:#ffffff;
    }
    #customers tr.alt td
    {
        color:#000000;
        background-color: #acf286;
    }
</style>
</head>
<div align="center">
  <table id="customers">
    <tr>
      <th>Pic</th>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Condition</th>
      <!--<th>Duration</th>-->
      <th>Price</th>
      <th>Quantity</th>
      <th>Seller</th>
      <th></th>
     <th></th>
      
    </tr>

    <% @items.each do |item| %>
        <tr>
          <td><%= image_tag item.product.url %></td>
          <td><%= item.title %></td>
          <td><%= item.category %></td>
          <td><%= item.description %></td>
          <td><%= item.condition %></td>
          <!--<td><%#= item.duration %></td>-->
          <td>$<%= item.price %></td>
          <td><%= item.quantity %></td>
          <td><%= item.user.email %>
          <td><%= link_to 'View the Item', item %></td>
          <% if current_user.nil? || current_user.id != item.user_id %>
              <td><%= link_to 'Add To Cart', :controller => "/shopping_carts", :action => :add_to_cart, :item_id => item.id, :quantity => 1 %></td>
		<% else %> <td>Your Item</td>
          <% end %>
        </tr>
    <% end %>


  </table>

</div>


