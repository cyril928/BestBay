<h1>Welcome to BestBay</h1>
<style>
    #customers
    {
        font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
        width:100%;
        border-collapse:collapse;
    }
    #customers td, #customers th
    {
        font-size:1em;
        border:1px solid #98bf21;
        padding:3px 7px 2px 7px;
    }
    #customers th
    {
        font-size:1.1em;
        text-align:left;
        padding-top:5px;
        padding-bottom:4px;
        background-color:#A7C942;
        color:#ffffff;
    }
    #customers tr.alt td
    {
        color:#000000;
        background-color: #acf286;
    }
</style>
</head>
<div align="center">
  <table id="customers">

    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Condition</th>
      <!--<th>Duration</th>-->
      <th>Price</th>
      <th>Quantity</th>
      <th>Seller</th>
      <th>Advertised</th>
      <th></th>
     <th></th>
      
    </tr>

    <% @items.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td><%= item.category %></td>
          <td><%= item.description %></td>
          <td><%= item.condition %></td>
          <!--<td><%#= item.duration %></td>-->
          <td>$<%= item.price %></td>
          <td><%= item.quantity %></td>
          <td><%= item.user.email %>
          <td><%= item.isAdvertisement %></td>
          <td><%= link_to 'View the Item', item %></td>
          <% if current_user.nil? || current_user.id != item.user_id %>
              <td><%= link_to 'Add To Cart', :controller => "/shopping_carts", :action => :add_to_cart, :item_id => item.id, :quantity => 1 %></td>
		<% else %> <td>Your Item</td>
          <% end %>
        </tr>
    <% end %>



  <tr>
    <td>
      <% @advertised_items = @items.select { |item| item.isAdvertisement == true }%>
     <% item_length = @advertised_items.length %>
      <% rand_num = rand(item_length) %>
      <% i=0 %>
      <% @advertised_items.each do |item| %>
      <% if i == rand_num   %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.category %></td>
        <td><%= item.description %></td>
        <td><%= item.condition %></td>
        <!--<td><%#= item.duration %></td>-->
        <td>$<%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.user.email %>
        <td><%= item.isAdvertisement %></td>
        <td><%= link_to 'View the Item', item %></td>
        <% i = i+1 %>

      </tr>
        <% else %>
        <% i = i+1 %>
        <%  %>
  <% end %>

    <% end %>


    </td>
  </tr>
        </table>
</div>



