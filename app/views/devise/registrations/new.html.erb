<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>
    <div><%= f.label :first_name %><br>
      <%= f.text_field :first_name %></div>
    <div><%= f.label :last_name %><br>
      <%= f.text_field :last_name %></div>

    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>
    <div><%= f.label :street %><br>
      <%= f.text_field :street %></div>
    <div><%= f.label :country %><br>
      <%= f.text_field :country %></div>
    <div><%= f.label :zip %><br>
      <%= f.text_field :zip %></div>
    <div><%= f.label :phone%><br>
     <%= f.text_field :phone %></div>

    <%= f.hidden_field :reward_points, :value => 0 %>
    <%= f.hidden_field :active, :value => 1 %>
  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
