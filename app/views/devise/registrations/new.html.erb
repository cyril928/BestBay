<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <table>
      <div>
        <tr>
          <td><%= f.label :email %> </td>
        </tr>
        <tr>
          <td><%= f.email_field :email, :autofocus => true %> </td>
        </tr>
      </div>


      <div>
        <tr>
          <td>  <%= f.label :first_name %>   </td>
        </tr>
        <tr>
          <td> <%= f.text_field :first_name %>   </td>
        </tr>
      </div>

      <div>
        <tr>
          <td>  <%= f.label :last_name %>  </td>
        </tr>
        <tr>
          <td><%= f.text_field :last_name %>  </td>
        </tr>
      </div>

      <div>
        <tr>
          <td>  <%= f.label :password %>   </td>
        </tr>
        <tr>
          <td>  <%= f.password_field :password %>   </td>
        </tr>
      </div>

      <div>
        <tr>
          <td>  <%= f.label :password_confirmation %>   </td>
        </tr>
        <tr>
          <td> <%= f.password_field :password_confirmation %>    </td>
        </tr>
      </div>

      <div>
        <tr>
          <td>   <%= f.label :street %>  </td>
        </tr>
        <tr>
          <td>  <%= f.text_field :street %>   </td>
        </tr>
      </div>

      <div>
        <tr>
          <td>   <%= f.label :country %>  </td>
        </tr>
        <tr>
          <td>   <%= f.text_field :country %>   </td>
        </tr>
      </div>

      <div>
        <tr>
          <td>   <%= f.label :zip %>  </td>
        </tr>
        <tr>
          <td>   <%= f.text_field :zip %>  </td>
        </tr>
      </div>

      <div>
        <tr>
          <td>   <%= f.label :phone %>  </td>
        </tr>
        <tr>
          <td>  <%= f.text_field :phone %>  </td>
        </tr>
      </div>

    </table>

    <%= f.hidden_field :reward_points, :value => 0 %>
    <%= f.hidden_field :active, :value => 1 %>

    <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
